<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    tools:context="com.example.kent.letshare.LoginActivity">

    <ImageView
        android:id="@+id/icon_main"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        app:srcCompat="@drawable/icon" />

    <TextView
        android:id="@+id/login_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/icon_main"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="9dp"
        android:text="Let's Share!"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/acc_txt"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="#11000000"
        android:drawableLeft="@drawable/account"
        android:ems="10"
        android:hint="Account"
        android:inputType="textPersonName"
        android:textColorHint="#444444"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/pass_txt"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/acc_txt"
        android:layout_alignStart="@+id/acc_txt"
        android:layout_below="@+id/acc_txt"
        android:layout_marginTop="16dp"
        android:background="#11000000"
        android:drawableLeft="@drawable/password"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColorHint="#444444"
        android:textSize="18dp" />

    <Button
        android:id="@+id/login_btn"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/reg_lbl"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="28dp"
        android:background="@drawable/pink_btn"
        android:onClick="Login"
        android:text="Log in"
        android:textAllCaps="false" />

    <TextView
        android:id="@+id/reg_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        android:onClick="Register"
        android:text="No account? Register here!"
        android:textAllCaps="false"
        android:textColor="@android:color/background_light" />

</RelativeLayout>

